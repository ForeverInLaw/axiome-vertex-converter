# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram API credentials (required for local Bot API Server to bypass 20MB limit)
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Local Bot API Server URL (default: http://telegram-bot-api:8081)
# Leave empty to use standard Telegram API (20 MB download, 50 MB upload limit)
# With local server: 2000 MB download and upload limit
TELEGRAM_API_ROOT=http://telegram-bot-api:8081

# Admin Users (comma-separated Telegram user IDs)
# Admins get unlimited access without subscription
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=converter_bot
DB_USER=botuser
DB_PASSWORD=your_strong_password_here

# Axiome Blockchain
AXIOME_WALLET_ADDRESS=axm1your_wallet_address_here
AXIOME_API_ENDPOINT=https://api-chain.axiomechain.org

# Subscription
SUBSCRIPTION_PRICE_AXM=50

# Limits
MAX_FILE_SIZE_MB=200
MAX_FREE_FILE_SIZE_MB=20
DAILY_LIMIT_FREE=3
DAILY_LIMIT_SUBSCRIBED=100

# Performance
# Max concurrent conversions (depends on CPU cores)
# Recommended: 2-4 cores = 2, 4-6 cores = 3-4, 8+ cores = 4-6
MAX_CONCURRENT_CONVERSIONS=2

# Environment
NODE_ENV=production
